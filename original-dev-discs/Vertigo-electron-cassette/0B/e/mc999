		TTL	e.mc999********************************************************************************print_text	STX	workspace		STY	workspace+1		LDY	#0pt1		LDA	(workspace),Y		BEQ	pt2		JSR	oswrch		INY		BNE	pt1pt2		RTS********************************************************************************show_mes	TXA		PHA		TYA		PHA		JSR	venetian		LDA	#4		STA	workspace		LDA	#14		LDX	#30		LDY	#4		JSR	box		PLA		TAY		PLA		TAX		JSR	print_text		LDA	#0		STA	lb_frame		LDA	#100		STA	dea_frcounteolX1		JSR	fx193		LDA	lb_frame		LDX	#6		LDY	#128		JSR	disp_lball		LDA	lb_frame		EOR	#15		LDX	#32		LDY	#128		JSR	disp_lball		JSR	inclb		DEC	dea_frcount		BNE	eolX1		RTS********************************************************************************eolevel1	LDX	#>levmes1		LDY	#<levmes1		JSR	show_mes		JMP	nls3********************************************************************************eolevel2	LDX	#>levmes2		LDY	#<levmes2		JSR	show_mes		LDX	#>levmes2b		LDY	#<levmes2b		JSR	show_mes		LDX	#>levmes2c		LDY	#<levmes2c		JSR	show_mes		JMP	nls3********************************************************************************eolevel3	LDX	#>levmes3		LDY	#<levmes3		JSR	show_mes		LDA	#3		JSR	flat_run * * * * * * * * * * * * * * * * * * * *		JSR	d_shadow		JSR	do_ra		JSR	bounce		JSR	venetian		LDX	#>levmes3b		LDY	#<levmes3b		JSR	show_mes		JMP	nls3********************************************************************************do_ra		LDA	#2		LDX	old_X		LDY	old_Y		JMP	restore_area********************************************************************************eolevel4	LDX	#>levmes4		LDY	#<levmes4		JSR	show_mes		LDA	#2		JSR	flat_run		LDA	#>thatsnot		STA	restore+1		LDA	#<thatsnot		STA	restore+2		LDA	#19		STA	ra_height+1		LDA	#5		LDX	#32		LDY	#124		JSR	restore_area		LDA	#15		JSR	large_delay		JMP	nls3********************************************************************************eolevel5ch	LDX	#>levmes5c		LDY	#<levmes5c		JSR	show_mes		JMP	not_last_scr********************************************************************************flat_run	JSR	doscreen		JSR	reset_cols		LDA	#32 		; X co-ord		STA	xy		STA	xy+2		LDX	#0		STX	xy+1		STX	xy+3		INX		STX	indicator		LDA	#20		; height		STA	xy+4		JSR	setup_ball		JSR	tel2 * * * * * * * * * * * * * * * * * * * *f_lpX		JSR	anim_doframe		JSR	fx19		JSR	osbyte		LDA	xy		CLC		ADC	#8		STA	xy		STA	xy+2		LDA	xy+1		ADC	#0		STA	xy+1		STA	xy+3		CMP	#2		BLT	f_lpX		LDA	xy		CMP	#&60		BLT	f_lpX		RTS********************************************************************************levmes1	DFB	31,9,16		ASC	"You're doing great !!!"		DFB	31,11,17		ASC	"Now try level 2 !!!"		DFB	0 * * * * * * * * * * * * * * * * * * * *levmes2	DFB	31,12,16		ASC	"20 screens down,"		DFB	31,11,17		ASC	"30 left to go !!!"		DFB	0levmes2b	DFB	31,11,16		ASC	"So go for it !!!"		DFB	31,9,17		ASC	"If you're really good,"		DFB	0levmes2c	DFB	31,9,16		ASC	"maybe some animation !"		DFB	31,11,17		ASC	"( Next time !!! )"		DFB	0 * * * * * * * * * * * * * * * * * * * *levmes3	DFB	31,13,16		ASC	"One small jump"		DFB	31,14,17		ASC	"for ball ..."		DFB	0levmes3b	DFB	31,11,16		ASC	"... one giant leap"		DFB	31,11,17		ASC	"for bouncykind !!!"		DFB	0 * * * * * * * * * * * * * * * * * * * *levmes4	DFB	31,16,16		ASC	"And now,"		DFB	31,17,17		ASC	"THIS :"		DFB	0 * * * * * * * * * * * * * * * * * * * *levmes5	DFB	31,10,16		ASC	"Yahoo !!! It's bacon"		DFB	31,11,17		ASC	"sandwich time !!!"		DFB	0levmes5b	DFB	31,9,16		ASC	"( But maybe I'll wait"		DFB	31,11,17		ASC	"until breakfast )."		DFB	0   *   *   *   *   *   *   *   *   *   *levmes5c	DFB	31,10,16		ASC	"Well done ! Now try"		DFB	31,10,17		ASC	"it without cheating."		DFB	0********************************************************************************		CHN	mcdata