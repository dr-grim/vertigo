		TTL	e.mc		; Sets up all variables & macros,					; also includes all source files********************************************************************************START		MACRO			; Defines X,Y for enemy's path		DW	@1,@2		ENDM********************************************************************************MOVE		MACRO			; Defines 1 move for enemy's path		DFB	@1+(@2*8)+@3		ENDM********************************************************************************INKEY		MACRO			; MACRO to provide INKEY(-) function		LDA	#&81		LDX	#>@1		LDY	#&FF		JSR	osbyte		TYA		ENDM********************************************************************************LOOKUP		MACRO			; TABLE <start>,<step>,<number>temp@0		=	@1count@0	=	0		REPEAT		DW	temp@0temp@0		=	temp@0+@2count@0	=	count@0+1		UNTIL	count@0=@3		ENDM********************************************************************************OFF		=	0ON		=	1+2OUT		=	0IN		=	4*********************************************************************************nvwrch		EQU	&FFC8		; setup all os routines and registers*nvrdch		EQU	&FFCB*osfind		EQU	&FFCE*osbgpb		EQU	&FFD1*osbput		EQU	&FFD4		; WILL NOW ONLY WORK ON OS 1.2*osbget		EQU	&FFD7*osargs		EQU	&FFDA*osfile		EQU	&FFDD*osrdch		EQU	&FFE0*osasci		EQU	&FFE3*osnewl		EQU	&FFE7oswrch		EQU	&FFEEosword		EQU	&FFF1osbyte		EQU	&FFF4oscli		EQU	&FFF7 * * * * * * * * * * * * * * * * * * * *		DSECT		ORG	&0000timer1		DS	1timer2		DS	1 * * * * * * * * * * * * * * * * * * * *drmem		DS	10xy		DS	5ab		DS	10oxy		DS	6hites		DS	7j		DS	5mem		DS	5u		DS	1VC		DS	1h		DS	1old_h		DS	1c		DS	11workspace	DS	&12		; WAS &14indicator	DS	1frame		DS	1old_X		DS	1old_X2		DS	1old_Y		DS	1old_Y2		DS	1pixel_offset	DS	1old_height	DS	1pointer	DS	2controller	DS	1height_1	DS	1height_2	DS	1height_3	DS	1height_4	DS	1pixel_X	DS	1pixel_mask	DS	1pixel_actual	DS	1pointer2	DS	2pointer3	DS	2menu_st	DS	1enemy_x	DS	2enemy_y	DS	2enemy_z	DS	1e