		TTL	mcload		; Loading machine code****************************************		EXEC	execute********************************************************************************EFFECT		MACROloop	=	1	WHILE	loop<=@2	VDU19	@1,loop	JSR	waitqloop	=	loop+1	WEND		ENDM********************************************************************************VDU19		MACRO		LDA	#19		JSR	oswrch		LDA	#@1		JSR	oswrch		LDA	#@2		JSR	oswrch		LDA	#0		JSR	oswrch		JSR	oswrch		JSR	oswrch		ENDM********************************************************************************DEFINE		MACRO		LDA	#8		LDX	#>@1		LDY	#<@1		JSR	osword		ENDM********************************************************************************LOAD		MACRO			; LOAD <string_location>					; ( Does OSCLI <string> )		LDX	#>@1		LDY	#<@1		JSR	oscli		ENDM********************************************************************************RUN		MACRO			; RUN <string_location>					; ( Does OSCLI <string> )		LDX	#>@1		LDY	#<@1		JMP	oscli		ENDM********************************************************************************CHANGE		MACRO		LDA	#19		JSR	oswrch		LDA	#@1		JSR	oswrch		LDA	#@2		JSR	oswrch		LDA	#0		JSR	oswrch		JSR	oswrch		JSR	oswrch		ENDM********************************************************************************OFF		=	0ON		=	1+2OUT		=	0IN		=	4****************************************oswrch		EQU	&FFEEosbyte		EQU	&FFF4oscli		EQU	&FFF7osword		EQU	&FFF1romsel		EQU	&FE30romevn		EQU	&F4accreg		EQU	&FE34********************************************************************************		DSECT		ORG	&00bass_offset	DS	1bb_num		DS	1bass_pointer	DS	2main_offset	DS	1mb_num		DS	1main_pointer	DS	2		DEND********************************************************************************		ORG	&1900execute	LDA	#229		LDX	#1		LDY	#0		JSR	osbyte		LDA	#22		JSR	oswrch		LDA	#1		JSR	oswrch		LDA	#23		JSR	oswrch		LDA	#0		JSR	oswrch		LDA	#1