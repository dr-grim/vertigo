		STA	jnote1		LDA	#7		LDX	#>jnote1		LDY	#<jnote1		JSR	osword		LDA	#3		STA	jnote1		LDA	#7		LDX	#>jnote1		LDY	#<jnote1		JSR	osword		LDA	#1		STA	jnote1		LDA	#7		LDX	#>jnote1		LDY	#<jnote1		JMP	osword********************************************************************************update_jingle	LDA	#128		LDY	#0		LDX	#-6		JSR	osbyte		CPX	#2		BLT	skip_jbass		LDY	#1		LDA	(bass_pointer),Y		BEQ	skip_jbass		JSR	do_jbass		BRA	update_jingleskip_jbass	LDA	#128		LDY	#0		LDX	#-7		JSR	osbyte		CPX	#2		BLT	skip_jarpeg		LDY	#1		LDA	(arpeg_pointer),Y		BEQ	skip_jarpeg		JSR	do_jarpeg		BRA	skip_jbassskip_jarpeg	LDA	#128		LDY	#0		LDX	#-8		JSR	osbyte		CPX	#2		BLT	skip_jmain		LDY	#1		LDA	(main_pointer),Y		BEQ	skip_jmain		JSR	do_jmain		BRA	skip_jarpegskip_jmain	RTS********************************************************************************		do_jbass	LDA	(bass_pointer)		STA	jnote1+4		LDA	(bass_pointer),Y		STA	jnote1+6		STA	jnote0+6		LDA	bass_pointer		CLC		ADC	#2		STA	bass_pointer		LDA	bass_pointer+1		ADC	#0		STA	bass_pointer+1		LDA	#7		LDX	#>jnote0		LDY	#<jnote0		JSR	osword		LDA	#7		LDX	#>jnote1		LDY	#<jnote1		JMP	osword********************************************************************************		do_jarpeg	LDA	(arpeg_pointer)		STA	jnote2+4		BNE	not_jarest		LDA	#0		STA	jnote2+2not_jarest	LDA	(arpeg_pointer),Y		STA	jnote2+6		LDA	#7		LDX	#>jnote2		LDY	#<jnote2		JSR	osword		LDA	(arpeg_pointer)		BNE	not_jarest2		LDA	#7		STA	jnote2+2not_jarest2	LDA	arpeg_pointer		CLC		ADC	#2		STA	arpeg_pointer		LDA	arpeg_pointer+1		ADC	#0		STA	arpeg_pointer+1		RTS********************************************************************************		do_jmain	LDA	(main_pointer)		STA	jnote3+4		LDA	(main_pointer),Y		STA	jnote3+6		LDA	main_pointer		CLC		ADC	#2		STA	main_pointer		LDA	main_pointer+1		ADC	#0		STA	main_pointer+1		LDA	#7		LDX	#>jnote3		LDY	#<jnote3		JMP	osword********************************************************************************check_eojingle	LDA	#128		LDY	#0		LDX	#-6		JSR	osbyte		CPX	#15		BEQ	checkc2		RTScheckc2	LDA	#128		LDY	#0		LDX	#-7		JSR	osbyte		CPX	#15		BEQ	checkc3		RTScheckc3	LDA	#128		LDY	#0		LDX	#-8		JSR	osbyte		CPX	#15		RTS********************************************************************************		CHN	mc007